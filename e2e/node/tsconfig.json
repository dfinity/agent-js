{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "esnext",
    "lib": ["es2021"],
    "declaration": true,
    "sourceMap": true,
    "tsBuildInfoFile": "./build_info.json",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "references": [
    { "path": "../../packages/agent" },
    { "path": "../../packages/authentication" },
    { "path": "../../packages/identity" }
  ]
}
