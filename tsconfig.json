{
  "compilerOptions": {
    "rootDir": ".",
    "allowJs": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "useDefineForClassFields": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022"
  },
  "exclude": [
    "**/src/**/*.test.ts",
    "**/src/**/*.snap",
    "**/src/**/*.spec.ts",
    "node_modules",
    "packages/**/test",
    "packages/**/dist",
    "packages/**/lib",
    "packages/**/jest.config.ts",
    "jest.config.base.ts",
    "jest.config.ts",
    "packages/**/*.snap"
  ]
}
