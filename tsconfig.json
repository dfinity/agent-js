{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node10",

    "rootDir": ".",
    "allowJs": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "exclude": ["**/src/**/*.test.ts"]
}
