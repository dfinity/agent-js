{
  "compilerOptions": {
    "rootDir": ".",
    "allowJs": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "useDefineForClassFields": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022"
  },
  "exclude": [
    "node_modules",
    "packages/**/src/**/*.test.ts",
    "packages/**/src/**/*.spec.ts",
    "packages/**/test",
    "packages/**/dist",
    "packages/**/lib",
    "packages/**/*.snap",
    "packages/**/jest.config.ts",
    "jest.config.ts",
    "jest.config.base.ts"
  ],
  "references": [
    { "path": "./tsconfig.test.json" },
    { "path": "./packages/auth-client/tsconfig.test.json" }
  ]
}
