{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./",
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "jsx": "react",
    "lib": ["dom", "es2017", "ESNext"],
    "module": "commonjs",
    "outDir": ".tsc-out",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "tsBuildInfoFile": "./build_info.json"
  },
  "include": ["types/*", "src/**/*.ts", "src/**/*.tsx"],
  "references": [
    { "path": "../../packages/agent" },
    { "path": "../../packages/authentication" },
    { "path": "../bootstrap" }
  ]
}
