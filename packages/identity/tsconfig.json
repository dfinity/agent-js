{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./lib/esm",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "types/*",
    "src/**/*",
    "client-test",
    "index.d.ts",
    "../identity-secp256k1/src/secp256k1.test.ts",
    "../identity-secp256k1/hdkey.ts"
  ],
  "references": [{ "path": "../agent" }]
}
