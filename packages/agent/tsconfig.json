{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    "outDir": "lib/esm",
    "rootDir": "./src",
    "tsBuildInfoFile": "./build_info.json"
  },
  "include": ["types/*", "src/**/*.ts"],
  "exclude": [
    "**/src/**/__certificates__/**",
    "**/src/**/*.test.ts",
    "**/src/**/*.spec.ts",
    "**/src/**/*.snap",
    "test-setup.ts",
    "node_modules",
    "dist",
    "lib"
  ]
}
