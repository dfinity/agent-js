{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "allowJs": false,
    "outDir": "ts-out/",
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017"
    ],
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "paths": {
      "@dfinity/agent": ["../agent"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "types/*",
    "src/**/*.ts"
  ]
}
